# Sherlog Prometheus Agent Environment Configuration
# Copy this file to .env and adjust values as needed

# Application Environment
ENVIRONMENT=development  # Options: development, staging, production
DEBUG=false

# Prometheus Configuration
PROMETHEUS__URL=http://localhost:9090
PROMETHEUS__TIMEOUT=30
PROMETHEUS__MAX_RETRIES=3
PROMETHEUS__RETRY_BACKOFF=1.5

# Slack Configuration
SLACK__BOT_TOKEN=xoxb-your-bot-token
SLACK__APP_TOKEN=xapp-your-app-token
SLACK__DEFAULT_CHANNEL=monitoring

# LLM Configuration
LLM__PROVIDER=openai  # Options: openai, ollama
LLM__OPENAI_API_KEY=sk-your-openai-key
LLM__OLLAMA_HOST=http://localhost:11434

# Redis Configuration
REDIS__URL=redis://localhost:6379/0
REDIS__MAX_CONNECTIONS=10
REDIS__TIMEOUT=5

# Logging Configuration
LOGGING__LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOGGING__FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOGGING__FILE_PATH=/var/log/sherlog/agent.log  # Optional
LOGGING__ROTATION_SIZE=10MB
LOGGING__BACKUP_COUNT=5 